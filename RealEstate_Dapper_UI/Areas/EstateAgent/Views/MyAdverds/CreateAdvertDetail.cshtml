@model RealEstate_Dapper_UI.Dtos.ProductDetailDtos.CreateProductDetailDto
@{
    ViewData["Title"] = "CreateAdvertDetail";
    Layout = "~/Areas/EstateAgent/Views/LayoutEstateAgent/Index.cshtml";
}




<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6>İlan Detayları</h6>
                <form method="post">
                    <label>Emlak Boyutu m'2</label>
                    <input type="text" asp-for="ProductSize" class="form-control" />
                    <br />
                    <label>Yatak Odası Sayısı</label>
                    <input type="text" asp-for="BedRoomCount" class="form-control" />
                    <br />
                    <label>Banyo Sayısı</label>
                    <input type="text" asp-for="BathCount" class="form-control" />
                    <br />
                   

                    <label>Oda Sayısı</label>
                    <input type="text" asp-for="RoomCount" class="form-control" />
                    <br />
                    <label>Garaj Sayısı</label>
                    <input type="text" asp-for="GarageSize" class="form-control" />
                    <br />
                    <label>Yapılış Tarihi</label>
                    <input type="text" asp-for="BuildYear" class="form-control" />
                    <br />
                    <label>Fiyat</label>
                    <input type="text" asp-for="Price" class="form-control" rows="5"></textarea>
                    <br />
                    <label>Lokasyon </label>
                    <textarea asp-for="Location" class="form-control" rows="5"></textarea>
                    <br />
                    <label>Video Url </label>
                    <textarea asp-for="VideoUrl" class="form-control" rows="5"></textarea>
                    <br />
                    <button class="btn btn-primary">Kaydet</button>

                </form>
            </div>
        </div>
    </div>
</div>






