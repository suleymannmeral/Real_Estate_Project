@model  UpdateContactUsDto



@{
    ViewData["Title"] = "UpdateContactUs";
    Layout = "~/Views/Admin/Index.cshtml";
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">
        @ViewData["Error"]
    </div>
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6>Yeni Kateori Güncelleme Sayfası</h6>
                <form method="post">
                    <label>Kategori Adı</label>
                    <input type="hidden" asp-for="ContactUsId" />

                    <input type="text" asp-for="OfficeAdress" class="form-control" />
                    <br />
                    <input type="text" asp-for="Phone" class="form-control" />
                    <br />
                    <input type="text" asp-for="Tel" class="form-control" />
                    <br />
                    <input type="text" asp-for="Location" class="form-control" />
                    <br />
                    <input type="text" asp-for="Email" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Kaydet</button>

                </form>
            </div>
        </div>
    </div>
</div>



