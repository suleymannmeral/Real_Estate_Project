@model RealEstate_Dapper_UI.Areas.AboutUs.Data.AboutUsDto.UpdateAboutUsDto
@{
    ViewData["Title"] = "UpdateAboutUs";
    Layout = "~/Views/Admin/Index.cshtml";
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">
        @ViewData["Error"]
    </div>
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6>Hakkımızda Alanı Güncelleme Sayfası</h6>
                <form method="post">
                   
                    <input type="hidden" asp-for="AboutUsID" />
                    <label> Başlık </label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>Açıklama(1)</label>
                    <input type="text" asp-for="Description1" class="form-control" />
                    <br />
                    <label>Açıklama(2)</label>
                    <input type="text" asp-for="Description2" class="form-control" />
                    <br />
                    <label>Video Link</label>
                    <input type="text" asp-for="VideoLink" class="form-control" />
                    <br />
                   
                    <button class="btn btn-primary">Kaydet</button>

                </form>
            </div>
        </div>
    </div>
</div>


