@model RealEstate_Dapper_UI.Areas.AboutUs.Data.AboutUsDto.UpdateAboutUsSectionDto
@{
    ViewData["Title"] = "UpdateAboutUs";
    Layout = "~/Views/Admin/Index.cshtml";
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">
        @ViewData["Error"]
    </div>
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6>Hakkımızda Sayfası Section Alanı</h6>
                <form method="post">

                    <input type="hidden" asp-for="AboutUsSectionID" />
                    <label> Başlık </label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <label>Açıklama</label>
                    <br />
                    <input type="text" asp-for="Description" class="form-control" />
                    <label>Icon</label>
                    <br />
                    <input type="text" asp-for="Icon" class="form-control" />
                    <br />
                  

                    <button class="btn btn-primary">Kaydet</button>

                </form>
            </div>
        </div>
    </div>
</div>




