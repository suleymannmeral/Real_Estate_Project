@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}



<section class="w3l-cover-3">
    <div class="cover top-bottom">
        <div class="container">
            <div class="middle-section text-center">
                <div class="section-width">
                    <p>Evinizde Hissedin!</p>
                    <h2>Kendinize Uygun İlanı Oturduğunuz Yerden Bulun</h2>
                    <div class="most-searches">
                        <h4>Most Searches</h4>
                        <ul>
                            <li><a href="#link">Villa</a></li>
                            <li><a href="#link">Apartment</a></li>
                            <li><a href="#link">Private house</a></li>
                        </ul>
                    </div>
                    <form asp-action="PartialSearch" asp-controller="Default" class="w3l-cover-3-gd" method="post">
                        <input type="search" name="searchKeyValue" placeholder="Enter keywords" required>
                        <span class="input-group-btn">
                            <select class="btn btn-default" name="propertyCategoryId" required>
                                <option selected="">Gayrimenkul Türü</option>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.CategoryId">@item.CategoryName</option>
                                }


                            </select>
                        </span>
                        <span class="input-group-btn">
                            <select class="btn btn-default" name="city" required>
                                <option selected="">Şehir Seçin</option>                          
                                <option>aksaray</option>
                                <option>aydin</option>
                                <option>Rize</option>
                                <option>Trabzon</option>
                            </select>
                        </span>
                        <button type="submit" class="btn-primary">Search</button>
                    </form>
                </div>
                <section id="bottom" class="demo">
                    <a href="#bottom"><span></span>Scroll</a>
                </section>
            </div>
        </div>
    </div>
</section>


@await Component.InvokeAsync("_DefaultHomePageProductList")
@await Component.InvokeAsync("_DefaultWhoWeAreComponentPartial")
@await Component.InvokeAsync("_DefaultBottomGridComponentPartial")
@await Component.InvokeAsync("_DefaultProductListExploreCitiesComponentPartial")
@await Component.InvokeAsync("_DefaultOurClientsComponentPartial")
