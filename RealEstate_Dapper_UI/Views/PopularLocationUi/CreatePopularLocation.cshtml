@model CreatePopularLocationDto
@{
    ViewData["Title"] = "CreatePopularLocation";
    Layout = "~/Views/Admin/Index.cshtml";
}
@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">
        @ViewData["Error"]
    </div>
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Öne Çıkan Alan Ekleme Sayfası</h6>
                <form method="post">
                    <label>Şehir Adı</label>
                    <input type="text" asp-for="CityName" class="form-control" />
                    <br />
                    <label>Fotoğraf URL</label>
                    <input type="text" asp-for="ImageURL" class="form-control" />
                    <br />



                    <button class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>






